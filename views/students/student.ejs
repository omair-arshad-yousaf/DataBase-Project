  <th style="text-align: center; padding:10px 50px;">Email</th>
  <th style="text-align: center;padding:10px 25px;">Age</th>
  <th style="text-align: center;padding:10px 25px;">Status</th>
  <th colspan="3" style="text-align: center;padding:10px 199px;">Action</th>
</tr>
  <% for (var i=0;i<users.length;i++){%>
    <tr>
    <td><%=      i+1     %></td>
  <td><%= users[i].name%></td>
  <td><%= users[i].email%></td>
  <td><%= users[i].age%></td>
  <td><%= users[i].status%></td>
  <td><div> <a   class="button" href="/student?id=<%= users[i]._id %> ">Details  <i class="zmdi zmdi-eye"></i></a> </div></td>
  <td><div>  <a  class="button"  href="/student/update/<%= users[i]._id %> ">Update <i class="zmdi zmdi-edit"></i></a> </div></td>
  <td><div>  <a  class="button"  href="/student/delete/<%= users[i]._id %> ">Delete <i class="zmdi zmdi-delete "></i></a></div></td>
</tr>
</tr>

