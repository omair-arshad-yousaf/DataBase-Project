            <div class="col-lg-6 bg-light pt-4" >

              <form action="/student_update/<%=users._id%>"  method="post">
                <div class="row">
                   <div class="mb-3 col-md-6">
                    <label for="text" class="form-label">ID</label>
                    <input
                      id="email"
                      class="form-control"
                      type="text"
                      placeholder="Enter your ID"
                      name="sno"
                      value="<%= users.sno%>"
                    />
                  </div>
                  <div class="mb-3 col-md-6">
                    <label for="text" class="form-label">Name</label>
                    <input
                      id="email"
                      class="form-control"
                      type="text"
                      placeholder="Enter your name"
                      name="name"
                      value="<%= users.name%>"
                    />
                  </div>
    
                  <div class="mb-3 col-md-6">
                    <label for="email" class="form-label">Email</label>
                    <input id="email" class="form-control" name="email" type="email"
                    placeholder="Enter your email" 
                    value="<%= users.email%>"/>
                  </div>
                </div>
    
                <div class="mb-3 col">
                  <label for="password" class="form-label">Password</label>
                  <input
                    id="adress"
                    class="form-control"
                    type="password"
                    name="password"
                    value="<%= users.password%>"
                    placeholder="Enter your password"
                  />
                </div>
                <div class="mb-3 col">
                    <label for="passowrd" class="form-label">Confirm Password</label>
                    <input
                      id="adress"
                      class="form-control"
                      type="password"
                      name="confirmpass"
                      value="<%= users.confirmpass%>"
                      placeholder="Confirm your password"
                    />
                  </div>
    
                <div class="row">
                  <div class="mb-3 ">
                    <label for="age" class="form-label">Age</label>
                    <input
                      id="age"
                      class="form-control"
                      type="text"
                      name="age"
                      value="<%= users.age%>"
                      placeholder="Enter your age"
                    />
                  </div>
                  <div class="row">
                    <div class="mb-3 ">
                      <label for="age" class="form-label">Section</label>
                      <input
                        id="age"
                        class="form-control"
                        type="text"
                        name="section"
                        value="<%= users.section%>"
                        placeholder="Enter your section"
                      />
                    </div>
                  
                  <div class="row">
                    <div class="mb-3 ">
                      <label for="status" class="form-label">Status</label>
                      <input
                        id="status"
                        class="form-control"
                        type="text"
                        name="status"
                        value="<%= users.status%>"
                        placeholder="active/block"
                      />
                    </div>
                  
    
                <div class="form-check mb-3" >
          
                <div class="" col-md-12>
                  <button class="btn btn-success" style = "margin-left:40%;">Update</button>
                </div>
              </form>
            </div>
          </div>
        </div>
