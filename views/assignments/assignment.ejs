            <div class = "divbtn"><a href="/assign_create" id = "alink33">Add New Assignment +</a></div>
          </div>
          <table style="margin:0px auto; width:600px;">
<tr>
  <th style="text-align:center; padding:10px 40px;">Sno</th>
  <th style="text-align:center; padding:10px 20px;">Assign_ID</th>
  <th style="text-align:center; padding:10px 40px;">Section</th>
  <th style="text-align:center; padding:10px 40px;">Title</th>

  <th colspan="3" style="text-align: center;padding:10px 199px;">Action</th>
</tr>
  <% for (var i=0;i<users.length;i++){%>
    <tr>
    <td><%=      i+1     %></td>
      <td><%= users[i].sno%></td>
      <td><%= users[i].section%></td>
  <td><%= users[i].title%></td>

  <td><div> <a   class="button" href="/assign?id=<%= users[i]._id %> ">Details  <i class="zmdi zmdi-eye"></i></a> </div></td>
  <td><div>  <a  class="button"  href="/assign_update/<%= users[i]._id %> ">Update <i class="zmdi zmdi-edit"></i></a> </div></td>
  <td><div>  <a  class="button"  href="/assign_del/<%= users[i]._id %> ">Delete <i class="zmdi zmdi-delete "></i></a></div></td>
</tr>
</tr>

  <% } %>

